<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/carthumbnail"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/add_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="add gas date"
        android:textColor="@color/tab_text"
        android:textSize="@dimen/text_size"
        android:id="@+id/addgasdate"
        android:layout_alignTop="@id/carthumbnail"
        android:layout_toRightOf="@id/carthumbnail"
        android:layout_toEndOf="@id/carthumbnail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="gallons odometers price per gallon"
        android:textSize="@dimen/text_size"
        android:textColor="@color/tab_text"
        android:id="@+id/gallonsmilesandprice"
        android:layout_below="@id/addgasdate"
        android:layout_alignLeft="@id/addgasdate"
        android:layout_alignStart="@id/addgasdate" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/deletegaslog"
        android:src="@drawable/delete_icon"
        android:foregroundGravity="right"
        android:layout_alignBottom="@+id/carthumbnail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerInside"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="30dp" />
</RelativeLayout>